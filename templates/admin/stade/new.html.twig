{% extends 'base.html.twig' %}

{% block title %}Ajouter un stade{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .logo-preview {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 0.375rem;
        }
        .file-upload-label {
            transition: all 0.3s ease;
        }
        .file-upload-label:hover {
            background-color: #f3f4f6;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="bg-white shadow rounded-lg overflow-hidden" style="padding: 40px 70px 40px 70px">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-2xl font-bold text-gray-800">Ajouter un nouveau stade</h2>
            </div>

            <div class="px-6 py-4">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                <div>
                    {{ form_widget(form.nom) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div>
                    {{ form_widget(form.ville) }}
                    {{ form_errors(form.ville) }}
                </div>

                <div class="grid grid-cols-3 gap-4">
                    <div>
                        {{ form_widget(form.capaciteVirage) }}
                        {{ form_errors(form.capaciteVirage) }}
                    </div>
                    <div>
                        {{ form_widget(form.capacitePelouse) }}
                        {{ form_errors(form.capacitePelouse) }}
                    </div>
                    <div>
                        {{ form_widget(form.capaciteEnceinte) }}
                        {{ form_errors(form.capaciteEnceinte) }}
                    </div>
                </div>

                <div>
                    {{ form_widget(form.localisation) }}
                    {{ form_errors(form.localisation) }}
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">Photo du stade</label>
                    <div class="mt-1 flex items-center space-x-4">
                        <img id="logo-preview" src="{{ asset('images/default-stadium.png') }}"
                             class="logo-preview hidden"
                             alt="Aperçu de la photo">
                        <label for="{{ form.logoFile.vars.id }}"
                               class="file-upload-label inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer">
                            <i class="fas fa-upload mr-2"></i>
                            Télécharger une photo
                        </label>
                        {{ form_widget(form.logoFile) }}
                    </div>
                </div>

                <div class="flex justify-end space-x-3 pt-6">
                    <a href="{{ path('app_stade_index') }}"
                       class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                        Annuler
                    </a>
                    <button type="submit"
                            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                        <i class="fas fa-save mr-2"></i>
                        Enregistrer
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function previewLogo(input) {
            const preview = document.getElementById('logo-preview');
            const file = input.files[0];
            const reader = new FileReader();

            reader.onload = function(e) {
                preview.src = e.target.result;
                preview.classList.remove('hidden');
            }

            if (file) {
                reader.readAsDataURL(file);
            }
        }
    </script>
{% endblock %}