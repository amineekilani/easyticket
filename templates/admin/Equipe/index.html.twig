{% extends 'base.html.twig' %}

{% block title %}EasyTicket | Gestion des équipes{% endblock %}
{% block stylesheets %}
    <style>
    .team-logo {
    width: 60px;
    height: 60px;
    object-fit: contain;
    }
    .modal {
    transition: opacity 0.3s ease, transform 0.3s ease;
    }
    .modal-hidden {
    opacity: 0;
    transform: translateY(-20px);
    pointer-events: none;
    }
    nav a {
    transition: all 0.3s ease;
}

nav a:hover {
    transform: translateY(-2px);
}

nav a:focus {
    outline: none;
    transform: translateY(-2px);
}

    </style>
{% endblock %}
{% block javascripts %}
    <script>
        // Toggle sidebar
        document.getElementById('toggle-sidebar').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('collapsed');
            const icon = this.querySelector('i');
            if (icon.classList.contains('fa-chevron-left')) {
                icon.classList.remove('fa-chevron-left');
                icon.classList.add('fa-chevron-right');
            } else {
                icon.classList.remove('fa-chevron-right');
                icon.classList.add('fa-chevron-left');
            }
        });

        // Archive confirmation
        document.querySelectorAll('.archive-team-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                if (!confirm('Êtes-vous sûr de vouloir archiver cette équipe ?')) {
                    e.preventDefault();
                }
            });
        });

        // Restore confirmation
        document.querySelectorAll('.restore-team-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                if (!confirm('Êtes-vous sûr de vouloir restaurer cette équipe ?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
{% endblock %}

{% block body %}
    <!-- Main Content -->
    <div class="flex-1 overflow-auto">
        <!-- Header -->
        <header class="bg-white shadow-sm p-4 flex justify-between items-center">
            <h1 class="text-2xl font-bold text-gray-800">
                <i class="fas fa-users mr-2 text-red-600"></i>
                Gestion des équipes
            </h1>
            <div class="flex items-center space-x-4">
                <div class="relative">
                    <input type="text" placeholder="Rechercher..." class="pl-10 pr-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                    <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                </div>
            </div>
        </header>

        <!-- Content -->
        <main class="p-6">
            <!-- Actions Bar -->
            <div class="flex justify-between items-center mb-6">
                <div class="flex space-x-2">
                    <div class="relative">
                        <select class="appearance-none bg-white border border-gray-300 rounded-md px-4 py-2 pr-8 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option>Tous les statuts</option>
                            <option>Actif</option>
                            <option>Archivé</option>
                        </select>
                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                    <div class="relative">
                        <select class="appearance-none bg-white border border-gray-300 rounded-md px-4 py-2 pr-8 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option>Tous les pays</option>
                            <option>France</option>
                            <option>Espagne</option>
                            <option>Angleterre</option>
                            <option>Allemagne</option>
                            <option>Italie</option>
                        </select>
                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                </div>
                <a id="add-team-btn" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md flex items-center" href="{{ path('app_equipe_new') }}">
                    <i class="fas fa-plus mr-2"></i>
                    Ajouter une équipe
                </a>
            </div>

            <!-- Teams Table -->
            <div class="bg-white rounded-lg shadow overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Logo
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Nom
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Pays
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Statut
                                </th>
                                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for equipe in equipes %}
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <img src="{{ equipe.logo ? asset('uploads/logos/' ~ equipe.logo) : asset('images/default-team.png') }}" alt="{{ equipe.nom }}" class="team-logo">
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">{{ equipe.nom }}</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <span class="text-sm text-gray-500">{{ equipe.pays }}</span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                                            {{ equipe.statut == 'Actif' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' }}">
                                            {{ equipe.statut }}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <a href="{{ path('app_equipe_edit', { id: equipe.id }) }}" class="text-blue-600 hover:text-blue-900 mr-3">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        {% if equipe.statut == 'Actif' %}
                                            <form method="post" action="{{ path('app_equipe_archive', { id: equipe.id }) }}" class="inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('archive' ~ equipe.id) }}">
                                                <button type="submit" class="text-red-600 hover:text-red-900 archive-team-btn">
                                                    <i class="fas fa-archive"></i> Archiver
                                                </button>
                                            </form>
                                        {% else %}
                                            <form method="post" action="{{ path('app_equipe_restore', { id: equipe.id }) }}" class="inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('restore' ~ equipe.id) }}">
                                                <button type="submit" class="text-green-600 hover:text-green-900 restore-team-btn">
                                                    <i class="fas fa-undo"></i> Restaurer
                                                </button>
                                            </form>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="px-6 py-4 text-center text-gray-500">
                                        Aucune équipe trouvée
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="bg-white px-4 py-3 flex items-center justify-center border-t border-gray-200 sm:px-6">
                    <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                        <a href="{{ path('app_equipe_index', {'page': pagination.previousPage}) }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 rounded-l-md {{ pagination.hasPrevious ? '' : 'cursor-not-allowed text-gray-300' }}">
                            <span class="sr-only">Précédent</span>
                            <i class="fas fa-chevron-left"></i>
                        </a>
                        {% for page in 1..pagination.pageCount %}
                            <a href="{{ path('app_equipe_index', {'page': page}) }}" class="relative inline-flex items-center px-4 py-2 border text-sm font-medium rounded-md 
                                {% if page == pagination.currentPage %} 
                                    bg-red-600 text-white 
                                {% else %}
                                    bg-white text-gray-500 hover:bg-gray-50
                                {% endif %}">
                                {{ page }}
                            </a>
                        {% endfor %}
                        <a href="{{ path('app_equipe_index', {'page': pagination.nextPage}) }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 rounded-r-md {{ pagination.hasNext ? '' : 'cursor-not-allowed text-gray-300' }}">
                            <span class="sr-only">Suivant</span>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </nav>
                </div>
            </div>
        </main>
    </div>
{% endblock %}