<script>
    // DOM Elements
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const mobileMenu = document.getElementById('mobileMenu');
    const loginBtn = document.getElementById('loginBtn');
    const registerBtn = document.getElementById('registerBtn');
    const userMenu = document.getElementById('userMenu');
    const cartBtn = document.getElementById('cartBtn');
    const cartCount = document.getElementById('cartCount');
    const cartSidebar = document.getElementById('cartSidebar');
    const closeCart = document.getElementById('closeCart');
    const bookingModal = document.getElementById('bookingModal');
    const closeModal = document.getElementById('closeModal');
    const bookBtns = document.querySelectorAll('.book-btn');
    const loginModal = document.getElementById('loginModal');
    const closeLoginModal = document.getElementById('closeLoginModal');
    const registerModal = document.getElementById('registerModal');
    const closeRegisterModal = document.getElementById('closeRegisterModal');
    const showRegister = document.getElementById('showRegister');
    const showLogin = document.getElementById('showLogin');
    const checkoutModal = document.getElementById('checkoutModal');
    const closeCheckoutModal = document.getElementById('closeCheckoutModal');
    const confirmationModal = document.getElementById('confirmationModal');
    const closeConfirmation = document.getElementById('closeConfirmation');
    const proceedCheckout = document.getElementById('proceedCheckout');
    const continueShopping = document.getElementById('continueShopping');
    const confirmPayment = document.getElementById('confirmPayment');
    const viewTickets = document.getElementById('viewTickets');

    // State
    let selectedSeats = [];
    let cartItems = [];
    let isLoggedIn = false;

    // Event Listeners
    mobileMenuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
    });

    loginBtn.addEventListener('click', () => {
        loginModal.classList.remove('hidden');
    });

    registerBtn.addEventListener('click', () => {
        registerModal.classList.remove('hidden');
    });

    cartBtn.addEventListener('click', () => {
        cartSidebar.classList.remove('translate-x-full');
        document.body.style.overflow = 'hidden';
    });

    closeCart.addEventListener('click', () => {
        cartSidebar.classList.add('translate-x-full');
        document.body.style.overflow = 'auto';
    });

    closeModal.addEventListener('click', () => {
        bookingModal.classList.add('hidden');
        document.body.style.overflow = 'auto';
    });

    closeLoginModal.addEventListener('click', () => {
        loginModal.classList.add('hidden');
    });

    closeRegisterModal.addEventListener('click', () => {
        registerModal.classList.add('hidden');
    });

    closeCheckoutModal.addEventListener('click', () => {
        checkoutModal.classList.add('hidden');
    });

    closeConfirmation.addEventListener('click', () => {
        confirmationModal.classList.add('hidden');
        document.body.style.overflow = 'auto';
    });

    showRegister.addEventListener('click', () => {
        loginModal.classList.add('hidden');
        registerModal.classList.remove('hidden');
    });

    showLogin.addEventListener('click', () => {
        registerModal.classList.add('hidden');
        loginModal.classList.remove('hidden');
    });

    proceedCheckout.addEventListener('click', () => {
        cartSidebar.classList.add('translate-x-full');
        checkoutModal.classList.remove('hidden');
        updateCheckoutItems();
    });

    continueShopping.addEventListener('click', () => {
        cartSidebar.classList.add('translate-x-full');
        document.body.style.overflow = 'auto';
    });

    confirmPayment.addEventListener('click', () => {
        checkoutModal.classList.add('hidden');
        confirmationModal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';

        // Clear cart after payment
        cartItems = [];
        updateCartCount();
        updateCartItems();
    });

    viewTickets.addEventListener('click', () => {
        // In a real app, this would redirect to the user's tickets page
        alert('Redirection vers la page "Mes billets"');
        confirmationModal.classList.add('hidden');
        document.body.style.overflow = 'auto';
    });

    // Book buttons
    bookBtns.forEach(btn => {
        btn.addEventListener('click', (e) => {
            if (!isLoggedIn) {
                loginModal.classList.remove('hidden');
                return;
            }

            const match = e.target.getAttribute('data-match');
            document.getElementById('modalMatchTitle').textContent = match;
            bookingModal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';

            // Reset selected seats
            selectedSeats = [];
            updateSelectedSeatsDisplay();
        });
    });

    // Seat selection
    document.querySelectorAll('.stadium-seat.available').forEach(seat => {
        seat.addEventListener('click', () => {
            if (seat.classList.contains('available')) {
                seat.classList.remove('available');
                seat.classList.add('selected');

                const section = seat.getAttribute('data-section');
                const price = parseInt(seat.getAttribute('data-price'));
                const seatNumber = seat.getAttribute('data-seat');

                selectedSeats.push({ section, price, seatNumber });
                updateSelectedSeatsDisplay();
            } else if (seat.classList.contains('selected')) {
                seat.classList.remove('selected');
                seat.classList.add('available');

                const seatNumber = seat.getAttribute('data-seat');
                selectedSeats = selectedSeats.filter(seat => seat.seatNumber !== seatNumber);
                updateSelectedSeatsDisplay();
            }
        });
    });

    // Add to cart
    document.getElementById('addToCart').addEventListener('click', () => {
        if (selectedSeats.length === 0) {
            alert('Veuillez sélectionner au moins une place');
            return;
        }

        const match = document.getElementById('modalMatchTitle').textContent;

        selectedSeats.forEach(seat => {
            cartItems.push({
                match,
                section: seat.section,
                seatNumber: seat.seatNumber,
                price: seat.price
            });
        });

        updateCartCount();
        updateCartItems();
        bookingModal.classList.add('hidden');
        document.body.style.overflow = 'auto';

        // Show cart sidebar
        cartSidebar.classList.remove('translate-x-full');
        document.body.style.overflow = 'hidden';

        // Reset selection
        selectedSeats = [];
        document.querySelectorAll('.stadium-seat.selected').forEach(seat => {
            seat.classList.remove('selected');
            seat.classList.add('available');
        });
        updateSelectedSeatsDisplay();
    });

    // Checkout directly
    document.getElementById('checkoutBtn').addEventListener('click', () => {
        if (selectedSeats.length === 0) {
            alert('Veuillez sélectionner au moins une place');
            return;
        }

        const match = document.getElementById('modalMatchTitle').textContent;

        // Add to cart temporarily
        selectedSeats.forEach(seat => {
            cartItems.push({
                match,
                section: seat.section,
                seatNumber: seat.seatNumber,
                price: seat.price
            });
        });

        updateCartCount();
        bookingModal.classList.add('hidden');
        checkoutModal.classList.remove('hidden');
        updateCheckoutItems();

        // Reset selection
        selectedSeats = [];
        document.querySelectorAll('.stadium-seat.selected').forEach(seat => {
            seat.classList.remove('selected');
            seat.classList.add('available');
        });
        updateSelectedSeatsDisplay();
    });

    // Login form
    document.getElementById('loginForm').addEventListener('submit', (e) => {
        e.preventDefault();

        // In a real app, this would validate credentials with a backend
        isLoggedIn = true;
        loginBtn.classList.add('hidden');
        registerBtn.classList.add('hidden');
        userMenu.classList.remove('hidden');
        loginModal.classList.add('hidden');
    });

    // Register form
    document.getElementById('registerForm').addEventListener('submit', (e) => {
        e.preventDefault();

        // In a real app, this would send data to a backend
        isLoggedIn = true;
        loginBtn.classList.add('hidden');
        registerBtn.classList.add('hidden');
        userMenu.classList.remove('hidden');
        registerModal.classList.add('hidden');
    });

    // Helper functions
    function updateSelectedSeatsDisplay() {
        const selectedSeatsContainer = document.getElementById('selectedSeats');
        const totalPriceElement = document.getElementById('totalPrice');

        if (selectedSeats.length === 0) {
            selectedSeatsContainer.innerHTML = '<p class="text-gray-500">Aucune place sélectionnée</p>';
            totalPriceElement.textContent = '0 DT';
            return;
        }

        let html = '';
        let total = 0;

        selectedSeats.forEach(seat => {
            html += `
                    <div class="flex justify-between items-center py-2 border-b border-gray-200">
                        <div>
                            <span class="font-medium">${seat.section} - ${seat.seatNumber}</span>
                        </div>
                        <span class="font-bold">${seat.price} DT</span>
                    </div>
                `;
            total += seat.price;
        });

        selectedSeatsContainer.innerHTML = html;
        totalPriceElement.textContent = `${total} DT`;
    }

    function updateCartCount() {
        if (cartItems.length > 0) {
            cartCount.textContent = cartItems.length;
            cartCount.classList.remove('hidden');
        } else {
            cartCount.classList.add('hidden');
        }
    }

    function updateCartItems() {
        const cartItemsContainer = document.getElementById('cartItems');
        const cartTotalElement = document.getElementById('cartTotal');

        if (cartItems.length === 0) {
            cartItemsContainer.innerHTML = `
                    <div class="text-center py-8">
                        <i class="fas fa-shopping-cart text-4xl text-gray-300 mb-4"></i>
                        <p class="text-gray-500">Votre panier est vide</p>
                    </div>
                `;
            cartTotalElement.textContent = '0 DT';
            return;
        }

        let html = '';
        let total = 0;

        // Group items by match
        const matches = {};
        cartItems.forEach(item => {
            if (!matches[item.match]) {
                matches[item.match] = [];
            }
            matches[item.match].push(item);
        });

        // Display grouped items
        Object.keys(matches).forEach(match => {
            html += `
                    <div class="mb-6 pb-6 border-b border-gray-200">
                        <h4 class="font-semibold mb-3">${match}</h4>
                `;

            let matchTotal = 0;

            matches[match].forEach(item => {
                html += `
                        <div class="flex justify-between items-center py-2">
                            <div>
                                <span class="text-gray-600">${item.section} - ${item.seatNumber}</span>
                            </div>
                            <div class="flex items-center">
                                <span class="font-bold mr-4">${item.price} DT</span>
                                <button class="text-red-500 hover:text-red-700 remove-item" data-match="${match}" data-section="${item.section}" data-seat="${item.seatNumber}">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                    `;
                matchTotal += item.price;
                total += item.price;
            });

            html += `
                        <div class="flex justify-between items-center pt-2 mt-2 border-t border-gray-200">
                            <span class="font-medium">Total pour ce match :</span>
                            <span class="font-bold">${matchTotal} DT</span>
                        </div>
                    </div>
                `;
        });

        cartItemsContainer.innerHTML = html;
        cartTotalElement.textContent = `${total} DT`;

        // Add event listeners to remove buttons
        document.querySelectorAll('.remove-item').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const match = e.target.closest('button').getAttribute('data-match');
                const section = e.target.closest('button').getAttribute('data-section');
                const seat = e.target.closest('button').getAttribute('data-seat');

                cartItems = cartItems.filter(item =>
                    !(item.match === match && item.section === section && item.seatNumber === seat)
                );

                updateCartCount();
                updateCartItems();
            });
        });
    }

    function updateCheckoutItems() {
        const checkoutItemsContainer = document.getElementById('checkoutItems');
        const checkoutSubtotalElement = document.getElementById('checkoutSubtotal');
        const checkoutTotalElement = document.getElementById('checkoutTotal');

        if (cartItems.length === 0) {
            checkoutItemsContainer.innerHTML = '<p class="text-gray-500">Aucun article dans votre commande</p>';
            checkoutSubtotalElement.textContent = '0 DT';
            checkoutTotalElement.textContent = '0 DT';
            return;
        }

        let html = '';
        let subtotal = 0;

        // Group items by match
        const matches = {};
        cartItems.forEach(item => {
            if (!matches[item.match]) {
                matches[item.match] = [];
            }
            matches[item.match].push(item);
        });

        // Display grouped items
        Object.keys(matches).forEach(match => {
            html += `
                    <div class="mb-4 pb-4 border-b border-gray-200">
                        <h5 class="font-semibold mb-2">${match}</h5>
                `;

            matches[match].forEach(item => {
                html += `
                        <div class="flex justify-between items-center py-1">
                            <div>
                                <span class="text-gray-600">${item.section} - ${item.seatNumber}</span>
                            </div>
                            <span class="font-bold">${item.price} DT</span>
                        </div>
                    `;
                subtotal += item.price;
            });

            html += `</div>`;
        });

        checkoutItemsContainer.innerHTML = html;
        checkoutSubtotalElement.textContent = `${subtotal} DT`;
        checkoutTotalElement.textContent = `${subtotal + 2} DT`;
    }

    // Initialize
    updateCartCount();
    updateCartItems();
</script>
</body>
</html>