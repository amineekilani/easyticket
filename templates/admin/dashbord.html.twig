{# templates/admin/dashbord.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - EasyTicket{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        .chart-container {
            height: 300px;
        }
        .progress-bar {
            height: 6px;
            border-radius: 3px;
        }
        .user-avatar {
            width: 40px;
            height: 40px;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Header -->
    <header class="bg-white shadow-sm">
        <div class="px-6 py-4 flex justify-between items-center">
            <h1 class="text-2xl font-semibold text-gray-800"><i class="fas fa-tachometer-alt mr-2 text-red-600"></i>
                Tableau de bord</h1>
            <div class="flex items-center space-x-4">
                <div class="relative">
                    <input type="text" placeholder="Rechercher..." class="pl-10 pr-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                    <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                </div>
                <div class="relative">
                    <button class="p-2 rounded-full bg-gray-100 text-gray-600 hover:bg-gray-200">
                        <i class="fas fa-bell"></i>
                        <span class="absolute top-0 right-0 h-2 w-2 rounded-full bg-primary"></span>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Dashboard Content -->
    <main class="p-6">
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <!-- Tickets Sold -->
            <div class="stat-card bg-white rounded-lg shadow-sm p-6 transition duration-300 hover:shadow-md">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500">Billets vendus</p>
                        <h3 class="text-2xl font-bold text-gray-800 mt-1">12,450</h3>
                        <p class="text-sm text-green-500 mt-2">
                            <i class="fas fa-arrow-up mr-1"></i> 12.5% vs mois dernier
                        </p>
                    </div>
