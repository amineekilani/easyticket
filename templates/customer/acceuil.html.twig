    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .stadium-seat {
            width: 30px;
            height: 30px;
            margin: 2px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border-radius: 4px;
            transition: all 0.2s;
        }
        .stadium-seat:hover {
            transform: scale(1.1);
        }
        .available {
            background-color: #86efac;
        }
        .selected {
            background-color: #f87171;
        }
        .sold {
            background-color: #f87171;
            cursor: not-allowed;
        }
        .reserved {
            background-color: #fbbf24;
            cursor: not-allowed;
        }
        .stadium-section {
            margin-bottom: 20px;
            padding: 15px;
            border-radius: 8px;
            background-color: #f3f4f6;
        }
        .qr-code {
            width: 150px;
            height: 150px;
            background-color: #fff;
            padding: 10px;
            border: 1px solid #ddd;
        }
        .match-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
        .nav-link:hover {
            color: #ef4444;
        }
        .nav-link.active {
            color: #ef4444;
            border-bottom: 2px solid #ef4444;
        }
    </style>
</head>
