{% for equipe in equipes %}
    <tr>
        <td class="px-6 py-4 whitespace-nowrap">
            <img src="{{ equipe.logo ? asset('uploads/logos/' ~ equipe.logo) : asset('images/default-team.png') }}" alt="{{ equipe.nom }}" class="team-logo">
        </td>
        <td class="px-6 py-4">{{ equipe.nom }}</td>
        <td class="px-6 py-4">{{ equipe.pays }}</td>
        <td class="px-6 py-4">{{ equipe.statut }}</td>
        <td class="px-6 py-4 text-right">
            <a href="{{ path('app_equipe_edit', { id: equipe.id }) }}" class="text-blue-600 hover:text-blue-900 mr-3">
                <i class="fas fa-edit"></i> Modifier
            </a>
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="5" class="px-6 py-4 text-center text-gray-500">
            Aucune équipe trouvée.
        </td>
    </tr>
{% endfor %}
