{# templates/Customer/payment/success.html.twig #}
{% extends 'Customer/layout.html.twig' %}

{% block body %}
<div class="container mx-auto px-4 py-16">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8 text-center">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-check text-green-600 text-2xl"></i>
        </div>
        <h2 class="text-2xl font-bold mb-4">Paiement réussi !</h2>
        <p class="text-gray-600 mb-6">Merci pour votre achat. Vos billets ont été envoyés à votre adresse email.</p>
        <a href="{{ path('app_customer') }}" class="px-6 py-3 bg-red-600 text-white font-bold rounded-lg hover:bg-red-700">
            Retour à l'accueil
        </a>
    </div>
</div>
{% endblock %}