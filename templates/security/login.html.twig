<!DOCTYPE html>
<html lang="fr">
<head>
    <title>EasyTicket | Connexion</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" href="{{ asset('easy-ticket-logo.png') }}" type="image/png">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#df4e4e',
                        secondary: '#f8f9fc'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-secondary min-h-screen flex items-center">
<div class="container mx-auto px-4">
    {% for flash_success in app.flashes('success') %}
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded" role="alert">
            {{ flash_success }}
        </div>
    {% endfor %}
    <div class="flex justify-center">
        <div class="w-full max-w-md">
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="p-8">
                    <div class="text-center mb-6">
                        <img src="{{ asset('easy-ticket-logo.png') }}" alt="EasyTicket" class="mx-auto mb-4 max-w-[150px]">
                        <h1 class="text-xl font-semibold text-gray-800 mb-4">Bienvenue!</h1>
                    </div>
                    {% if error %}
                        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded" role="alert">
                            <div class="flex justify-between items-center">
                                <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                                <button type="button" class="text-red-700 hover:text-red-900">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                    {% endif %}
                    <form method="post" class="space-y-4">
                        <div>
                            <input
                                    type="email"
                                    class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                    name="email"
                                    id="inputEmail"
                                    value="{{ last_username }}"
                                    placeholder="Email"
                                    autocomplete="email"
                                    required
                                    autofocus
                            >
                        </div>
                        <div>
                            <input
                                    type="password"
                                    class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                                    name="password"
                                    id="inputPassword"
                                    placeholder="Mot de passe"
                                    autocomplete="current-password"
                                    required
                            >
                        </div>
                        <div class="flex justify-between items-center">
                            <div class="flex items-center">
                                <input
                                        type="checkbox"
                                        class="h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded"
                                        name="_remember_me"
                                        id="rememberMe"
                                >
                                <label class="ml-2 block text-sm text-gray-700" for="rememberMe">
                                    Se souvenir de moi
                                </label>
                            </div>
                            <a href="{{ path('app_forgot_password_request') }}" class="text-sm text-red-600 hover:text-red-800 hover:underline">Mot de passe oublié ?</a>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" class="w-full bg-primary hover:bg-red-700 text-white font-medium py-3 px-4 rounded-lg transition duration-200">
                            Se connecter
                        </button>
                    </form>
                    <hr class="my-6 border-gray-300">
                    <div class="text-center">
                        <a href="{{ path('app_register') }}" class="text-sm text-primary hover:text-red-700">Créer un compte</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>